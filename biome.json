{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": false,
		"include": ["src/**/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "warn",
				"noVar": "error",
				"useNumberNamespace": "off"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"indentWidth": 2,
			"quoteStyle": "double",
			"lineEnding": "lf",
			"indentStyle": "tab"
		}
	}
}
